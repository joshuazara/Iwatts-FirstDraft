<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <!-- Header Background -->
    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_yellow_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hamburger Menu Icon -->
    <ImageView
        android:id="@+id/ic_hamburger"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_hamburger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        tools:ignore="contentDescription"/>

    <!-- ScrollView to contain all dashboard content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_background"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Consumption Section -->
            <FrameLayout
                android:id="@+id/bg_mainConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <!-- Background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_light_yellow"/>

                <!-- TextView 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text12"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textSize="15sp"
                    android:textColor="#863B17"/>

                <!-- TextView 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text13"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:textSize="50sp"
                    android:textColor="#863B17"/>

                <!-- TextView 3 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text14"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:textSize="15sp"
                    android:textColor="#863B17"/>

                <!-- TextView 4 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text15"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="125dp"
                    android:textSize="15sp"
                    android:textColor="#863B17"/>
            </FrameLayout>

            <!-- Area Consumption Section -->
            <LinearLayout
                android:id="@+id/bg_areaConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginEnd="10dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <!-- Background box -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gray"/>

                    <!-- EditText over the background -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/text16"
                        android:autofillHints="name"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:background="@android:color/transparent"
                        android:inputType="text"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/text19"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:text="@string/text20"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        />
                </FrameLayout>

                <!-- Second box -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gray"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/text17"
                        android:autofillHints="name"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:background="@android:color/transparent"
                        android:inputType="text"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/text19"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:text="@string/text20"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        />
                </FrameLayout>

                <!-- Third box -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gray"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:autofillHints="name"
                        android:hint="@string/text18"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        android:background="@android:color/transparent"
                        android:inputType="text"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/text19"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:text="@string/text20"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        />
                </FrameLayout>
            </LinearLayout>

            <!-- Estimated Cost Section -->
            <FrameLayout
                android:id="@+id/bg_estimatedCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <!-- Background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/bg_light_yellow"/>

                <!-- TextView 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text21"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textSize="15sp"
                    android:textColor="#863B17"/>

                <!-- TextView 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text22"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    android:textSize="50sp"
                    android:textColor="#863B17"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="110dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text23"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#863B17"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text22"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#863B17"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text24"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#863B17"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text22"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#863B17"/>
                </LinearLayout>

            </FrameLayout>

            <!-- More Info Section -->
            <LinearLayout
                android:id="@+id/bg_moreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_gray">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/text25"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="17sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:baselineAligned="false">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_battery"
                                tools:ignore="contentDescription"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text29"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textStyle="bold"
                                android:layout_margin="10dp"
                                android:textSize="30sp"/>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/text26"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="17sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:baselineAligned="false">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_peak_time"
                                android:layout_gravity="center_horizontal"
                                tools:ignore="contentDescription"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text27"
                                android:layout_marginTop="30dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text30"
                                android:layout_marginTop="50dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#863B17"
                                android:textSize="16sp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_peak_value"
                                android:layout_gravity="center_horizontal"
                                tools:ignore="contentDescription"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text28"
                                android:layout_marginTop="30dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text19"
                                android:layout_marginTop="50dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#863B17"
                                android:textSize="16sp"/>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_button"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_monitoring"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/ic_monitoring"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_real_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/ic_real_time"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/ic_home"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_cost_estimation"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/ic_cost_estimation"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/ic_settings"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>