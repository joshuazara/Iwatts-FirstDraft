<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CostEstimationActivity">
    <View
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/bg_yellow_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_hamburger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        tools:ignore="contentDescription"/>
    <TextView
        android:id="@+id/costEstimationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/text52"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#863B17"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costEstimationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout
        android:id="@+id/bg_filterDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/costEstimationText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <!-- Background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_yellowish"/>

        <!-- TextView 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text50"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="#863B17"/>





    </FrameLayout>
    <FrameLayout
        android:id="@+id/bg_estimatedCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bg_filterDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <!-- Background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_light_yellow"/>

        <!-- TextView 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text21"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textSize="15sp"
            android:textColor="#863B17"/>

        <!-- TextView 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text22"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:textSize="50sp"
            android:textColor="#863B17"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="3">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text22"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#863B17"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text24"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#863B17"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text22"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#863B17"/>
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/bg_consumptionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/bg_estimatedCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <!-- Background box -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_light_red"/>

            <!-- EditText over the background -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/text53"
                android:autofillHints="name"
                android:textColor="#863B17"
                android:textAlignment="center"
                android:textSize="17sp"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/text34"
                android:textColor="#863B17"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                />

        </FrameLayout>

        <!-- Second box -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_light_red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/text44"
                android:autofillHints="name"
                android:textColor="#863B17"
                android:textAlignment="center"
                android:textSize="17sp"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/text34"
                android:textColor="#863B17"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                />

        </FrameLayout>

        <!-- Third box -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_light_red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints="name"
                android:text="@string/text54"
                android:textColor="#863B17"
                android:textAlignment="center"
                android:textSize="17sp"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/text22"
                android:textColor="#863B17"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                />

        </FrameLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/bg_dailyCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bg_consumptionInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <!-- Background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <!-- TextView 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text55"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="#863B17"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/bg_areaCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bg_dailyCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <!-- Background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <!-- TextView 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text56"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="#863B17"/>
    </FrameLayout>
        <FrameLayout
            android:id="@+id/bg_electricityRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bg_areaCost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <!-- Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg_light_yellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text57"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:textColor="#863B17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="cost"
                android:hint="@string/text59"
                android:inputType="text"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:textSize="50sp"
                android:textColor="#863B17"
                android:background="transparent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text58"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="115dp"
                android:textSize="16sp"
                android:textColor="#863B17"/>


        </FrameLayout>
        <FrameLayout
            android:id="@+id/comparison"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            app:layout_constraintTop_toBottomOf="@+id/bg_electricityRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_yellowish"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#863B17"
                android:text="@string/text60"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:baselineAligned="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text45"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart"
                        android:textColor="#863B17"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text61"
                        android:layout_marginTop="30dp"
                        android:paddingStart="10dp"
                        android:textColor="#863B17"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text16"
                        android:layout_marginTop="80dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text17"
                        android:layout_marginTop="110dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text18"
                        android:layout_marginTop="140dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text62"
                        android:layout_marginTop="180dp"
                        android:layout_marginStart="10dp"
                        android:textAlignment="textStart"
                        android:textColor="#863B17"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text63"
                        android:layout_marginTop="205dp"
                        android:textAlignment="center"
                        android:paddingStart="10dp"
                        android:textColor="#863B17"
                        android:textSize="14sp"
                        tools:ignore="RtlSymmetry" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text22"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#863B17"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text22"
                        android:layout_marginTop="80dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text22"
                        android:layout_marginTop="110dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text22"
                        android:layout_marginTop="140dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text22"
                        android:layout_marginTop="180dp"
                        android:layout_marginStart="10dp"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textStyle="bold"
                        android:textSize="30sp"/>

                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="5">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_monitoring" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_real_time" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_home" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_cost_estimation" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_settings" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>